                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>


    <script>
        async function detectLanguage() {
            const resultElement = document.getElementById('result');
            const textInput = document.getElementById('textInput').value.trim();
            if (!textInput) {
                resultElement.innerText = 'Please enter some text';
                resultElement.style.display = 'block';
                return;
            }
            try {
                resultElement.innerText = 'Detecting language...';
                resultElement.style.display = 'block';
                const response = await fetch('/detect-language', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        text: textInput
                    })
                });
                const data = await response.json();
                if (data.languages && data.languages.length > 0) {
                    resultElement.innerHTML =
                        `<strong>${data.message}</strong><br>`;
                    data.languages.forEach(lang => {
                        resultElement.innerHTML +=
                            `${lang.name} (${lang.confidence})<br>`;
                    });
                } else {
                    resultElement.innerText =
                        'Sorry, I don\'t know that language';
                }
            } catch (error) {
                resultElement.innerText = 'Error detecting language';
            }
        }
    </script>
    <style>
        #landing-page {
            height: 100svh;
            min-width: 100vw;
            position: absolute;
            left: 0;
        }

        @media (min-width: 992px) {
            #landing-page {
                height: 800px;
                min-width: 100vw;
                position: absolute;
                left: 0;
            }
        }
    </style>
