<% layout('layouts/boilerplate') %>
    <div class="row min-vh-100  d-grid align-items-center justify-content-center">
        <div class="col-12 offset-0 text-white text-center p-2">
            <div class="alert alert-danger" role="alert">
                <h3 class="alert-heading">
                    <%= err.name %>
                </h3>
                <p class="mb-0 card-body w-100 text-start mx-auto">
                    Hi, you fucked up with a <%= err.name %>!<br>
                        Error message:
                        <%= err.message %>
                </p>
            </div>
        </div>
    </div>