<% layout('./layouts/boilerplate.ejs') %>

  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div>
      <label for="title">Title</label>
      <input type="text" name="campground[title]" id="title" required value="<%=campground.title%>">
    </div>
    <div>
      <label for="location">Location</label>
      <input type="text" name="campground[location]" id="location" required value="<%= campground.location %>">
    </div>
    <button type="submit">Update Campground</button>
  </form>
  <footer>
    <button type="button"><a href="/campgrounds/<%= campground._id %>">back to Campground</a></button>
  </footer>