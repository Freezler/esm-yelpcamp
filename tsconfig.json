{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowImportingTsExtensions": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "**/*.ts",
    "public/javascript/validateforms.js"
  ],
  "exclude": [
    "node_modules"
  ]
}